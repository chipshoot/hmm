@model UserRegistrationViewModel
<div>
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h1>User Registration</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">User Registration</h3>
                </div>
                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" app-for="ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input class="form-control" placeholder="Username" asp-for="UserName" autofocus />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                            </div>
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input class="form-control" placeholder="FirstName" asp-for="FirstName" />
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input class="form-control" placeholder="LastName" asp-for="LastName" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input class="form-control" placeholder="Address" asp-for="Address" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email" asp-for="Email" />
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>